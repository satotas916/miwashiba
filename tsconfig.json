{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "@/types/"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/ts/*"]
    }
  }
}
